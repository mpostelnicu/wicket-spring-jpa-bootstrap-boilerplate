<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
    <resetJUL>true</resetJUL>
  </contextListener>

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %p [%c] %m%n</pattern>
    </encoder>
  </appender>
  <logger name="web" additivity="false" level="WARN">
    <appender-ref ref="stdout" />
  </logger>
  <logger name="org.apache.wicket" additivity="false" level="WARN">
    <appender-ref ref="stdout" />
  </logger>
  <logger name="org.springframework" additivity="false" level="WARN">
    <appender-ref ref="stdout" />
  </logger>
  <logger name="org.hibernate" additivity="false" level="WARN">
    <appender-ref ref="stdout" />
  </logger>
  <logger name="org.hibernate.SQL" additivity="false" level="WARN">
    <appender-ref ref="stdout" />
  </logger>
  <root level="WARN">
    <appender-ref ref="stdout" />
  </root>
</configuration>